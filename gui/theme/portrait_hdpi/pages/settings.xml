			</fill>

			<template name="status_bg"/>
			<template name="actionbar_back"/>
			<template name="statusbarinfo"/>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>{@credits}</text>
			</text>
			
			<image>
				<image resource="actionbar_shadow"/>
				<condition var1="show_shadow" var2="1"/>
				<placement x="0" y="%tab_title_h%"/>
			</image>

			<fill color="%linecolor%">
				<condition var1="show_shadow" var2="2"/>
				<placement x="0" y="%tab_title_h%" w="1080" h="2"/>
			</fill>
			
			<button style="tab_btn">
				<condition var1="credits_page" op="!=" var2="0"/>
				<placement x="0" y="%tab_btn_y%" w="360" h="84"/>
				<text>{@abt_credits}</text>
				<action function="set">credits_page=0</action>
			</button>

			<button style="tab_btn">
				<condition var1="credits_page" op="!=" var2="1"/>
				<placement x="360" y="%tab_btn_y%" w="360" h="84"/>
				<text>{@abt_trans}</text>
				<action function="set">credits_page=1</action>
			</button>

			<button style="tab_btn">
				<condition var1="credits_page" op="!=" var2="2"/>
				<placement x="720" y="%tab_btn_y%" w="360" h="84"/>
				<text>{@abt_changes}</text>
				<action function="set">credits_page=2</action>
			</button>

			<button style="tab_btn_hl">
				<condition var1="credits_page" var2="0"/>
				<placement x="0" y="%tab_btn_y%" w="360" h="84"/>
				<text>{@abt_credits}</text>
			</button>

			<button style="tab_btn_hl">
				<condition var1="credits_page" var2="1"/>
				<placement x="360" y="%tab_btn_y%" w="360" h="84"/>
				<text>{@abt_trans}</text>
			</button>

			<button style="tab_btn_hl">
				<condition var1="credits_page" var2="2"/>
				<placement x="720" y="%tab_btn_y%" w="360" h="84"/>
				<text>{@abt_changes}</text>
			</button>
			
			<image style="tab">
				<condition var1="credits_page" var2="0"/>
				<placement x="24" y="%tab_title_h%" placement="2"/>
			</image>

			<image style="tab">
				<condition var1="credits_page" var2="1"/>
				<placement x="384" y="%tab_title_h%" placement="2"/>
			</image>

			<image style="tab">
				<condition var1="credits_page" var2="2"/>
				<placement x="744" y="%tab_title_h%" placement="2"/>
			</image>

			<template name="gestures"/>
			
			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">about</action>
			</action>
		</page>
		
		<!-- Fox performance -->
		<page name="ext_gov">
			<template name="base"/>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>{@perf_title}</text>
			</text>

			<image>
				<placement x="%col1_x%" y="%row1_1_y%"/>
				<image resource="icon_info"/>
			</image>

			<text style="text_body2_hl">
				<placement x="%col1_x_indent%" y="%row1_1_y%"/>
				<text>{@reboot_to_take_effect}</text>
			</text>

			<text style="caption">
				<placement x="%col1_x_caption%" y="%row1_3_y%"/>
				<text>{@perf_conf_mode}</text>
			</text>

			<listbox style="listbox">
				<placement x="0" y="%row2_1_y%" w="%screen_w%" h="%lb_l3%"/>
				<listitem name="{@perf_conf_high}">
					<data variable="fox_boot_performance_check"/>
				</listitem>
				<listitem name="{@perf_conf_balance}">
					<data variable="fox_boot_balance_check"/>
				</listitem>
				<listitem name="{@perf_conf_batt}">
					<data variable="fox_boot_powersave_check"/>
				</listitem>
			</listbox>

			<action>
				<condition var1="tw_busy" var2="0"/>
				<condition var1="fox_boot_performance_check" op="!=" var2="1"/>
				<condition var1="fox_boot_balance_check" op="!=" var2="1"/>
				<condition var1="fox_boot_powersave_check" op="!=" var2="1"/>
				<action function="set">fox_boot_balance_check=1</action>
			</action>

			<action>
				<condition var1="tw_busy" var2="0"/>
				<condition var1="fox_boot_performance_check" var2="1"/>
				<action function="set">fox_boot_powersave_check=0</action>
				<action function="set">fox_boot_balance_check=0</action>
			</action>

			<action>
				<condition var1="tw_busy" var2="0"/>
				<condition var1="fox_boot_powersave_check" var2="1"/>
				<action function="set">fox_boot_performance_check=0</action>
				<action function="set">fox_boot_balance_check=0</action>
			</action>

			<action>
				<condition var1="tw_busy" var2="0"/>
				<condition var1="fox_boot_balance_check" var2="1"/>
				<action function="set">fox_boot_performance_check=0</action>
				<action function="set">fox_boot_powersave_check=0</action>
			</action>

			<template name="gestures"/>

			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">ext_general</action>
			</action>
		</page>

		<page name="ext_backup_quick">
			<template name="base"/>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>{@backup_hdr}</text>
			</text>

			<image>
				<placement x="%col1_x%" y="%row1_1_y%"/>
				<image resource="icon_info"/>
			</image>

			<text style="text_body2_hl">
				<placement x="%col1_x_indent%" y="%row1_1_y%"/>
				<text>{@backup_quick_info1}</text>
			</text>

			<text style="text_body2_hl">
				<placement x="%col1_x_indent%" y="%row1_2_y%"/>
				<text>{@backup_quick_info2}</text>
			</text>

			<text style="caption">
				<placement x="%col1_x_caption%" y="%row2_1_y%" />
				<text>{@settings_backup_qbkp_custom}</text>
			</text>

			<partitionlist>
				<placement x="0" y="%row2_2_y%" w="%screen_w%" h="%fullscreen_list_info_h%"/>
				<data name="tw_backup_list_quick"/>
				<listtype name="backup"/>
			</partitionlist>

			<template name="gestures"/>

			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">ext_backup</action>
			</action>
		</page>
	</pages>
</recovery>
