<?xml version="1.0"?>
<recovery>
	<pages>
		<!-- Settings -->
		<page name="settings">
			<listbox style="btn_list">
				<placement x="0" y="%ab_h%" w="%screen_w%" h="%bl_fullscreen_h%"/>
				<iconsize w="216" h="168" padding="24"/>
				<listitem name="{@settings_general}">
					<icon res="bs_btn_set_global"/>
					<action function="set">general_back=settings</action>
					<action function="page">ext_general</action>
				</listitem>
				<!-- listitem name="OTA" -->
				<listitem name="{@fox_ota_lite}">
					<condition var1="of_no_miui_features" op="!=" var2="1"/>
					<icon res="bs_btn_set_ota"/>
					<action function="page">fox_ota</action>
				</listitem>
				<listitem name="{@fox_ota_lite}">
					<condition var1="of_no_miui_features" var2="1"/>
					<icon res="bs_btn_set_ota"/>
					<action function="page">fox_ota_lite</action>
				</listitem>
				<listitem name="{@settings_ui}">
					<icon res="bs_btn_set_custom"/>
					<action function="page">ext_custom_reset</action>
				</listitem>
				<listitem name="{@enter_password_cptn}">
					<condition var1="tw_is_encrypted" var2="1"/>
					<condition var1="tw_is_decrypted" var2="0"/>
					<icon res="bs_btn_set_secure"/>
					<action function="overlay">pass_error</action>
				</listitem>
				<listitem name="{@enter_password_cptn}">
					<condition var1="tw_is_encrypted" var2="1"/>
					<condition var1="tw_is_decrypted" var2="1"/>
					<icon res="bs_btn_set_secure"/>
					<action function="page">pass_select</action>
				</listitem>
				<listitem name="{@enter_password_cptn}">
					<condition var1="tw_is_encrypted" var2="0"/>
					<icon res="bs_btn_set_secure"/>
					<action function="page">pass_select</action>
				</listitem>
				<listitem name="{@settings_screen}">
					<icon res="bs_btn_set_screen"/>
					<action function="page">ext_screen</action>
				</listitem>
				<listitem name="{@vibration_hdr}">
					<icon res="bs_btn_set_vibro"/>
					<condition var1="tw_disable_haptics" op="!=" var2="1"/>
					<action function="page">ext_vibrate</action>
				</listitem>
				<listitem name="{@backup_hdr}">
					<icon res="bs_btn_restore"/>
					<action function="set">backup_back=settings</action>
					<action function="page">ext_backup</action>
				</listitem>
				<listitem name="{@settings_time}">
					<icon res="bs_btn_set_regional"/>
					<action function="page">ext_time</action>
				</listitem>
				<listitem name="{@about_hdr}">
					<icon res="bs_btn_set_about"/>
					<action function="page">about</action>
				</listitem>
			</listbox>
			
			<template name="base"/>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>{@settings_hdr}</text>
			</text>
			
			<button style="actionbar">
				<placement x="%ab_btn1_x%" y="%ab_y%" placement="4"/>
				<action function="queueclear"/>
				<action function="set">fox_m_author=DarthJabba9</action>
				<action function="set">fox_m_name={@dialog_reset_theme_hdr}</action>
				<action function="set">tw_file=OF_reset.zip</action>
				<action function="set">tw_filename=/FFiles/OF_reset/OF_reset.zip</action>
				<action function="set">tw_filecheck=%tw_filename%</action>
				<action function="set">install_back=settings</action>
				<action function="set">tw_zip_location=/FFiles/OF_reset</action>
				<action function="queuezip"/>
				<action function="set">tw_notexistpage=fox_modules_confirm</action>
				<action function="set">tw_existpage=fox_modules_confirm</action>
				<action function="page">filecheck</action>
			</button>

			<image>
				<placement x="%ab_btn1_x%" y="%ab_y%" placement="4"/>
				<image resource="actionbar_reset"/>
			</image>

			<button style="actionbar">
				<placement x="%ab_btn2_x%" y="%ab_y%" placement="4"/>
				<condition var1="fox_lab" var2="1"/>
				<action function="page">fox_lab</action>
			</button>

			<image>
				<placement x="%ab_btn2_x%" y="%ab_y%" placement="4"/>
				<condition var1="fox_lab" var2="1"/>
				<image resource="actionbar_settings"/>
			</image>

			<template name="gestures"/>

			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">advanced</action>
			</action>
		</page>

		<!-- General -->
		<page name="ext_general">
			<template name="base"/>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<condition var1="general_back" var2="settings"/>
				<text>{@settings_general}</text>
			</text>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<condition var1="general_back" var2="wipe"/>
				<text>{@wipe_hdr}</text>
			</text>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<condition var1="general_back" var2="reboot"/>
				<text>{@reboot_btn}</text>
			</text>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<condition var1="general_back" var2="mount"/>
				<text>{@mount_hdr}</text>
			</text>

			<text style="caption">
				<placement x="%col1_x_caption%" y="%row1_1_y%"/>
				<condition var1="general_back" op="!=" var2="reboot"/>
				<text>{@options_hdr}</text>
			</text>

			<listbox style="settingslist">
				<placement x="0" y="%row1_2_y%" w="%screen_w%" h="%lb_l9%"/>
				<condition var1="general_back" op="!=" var2="reboot"/>
				<listitem name="{@mount_sys_ro_chk}">
					<condition var1="general_back" op="!=" var2="wipe"/>
					<condition var1="general_back" op="!=" var2="reboot"/>
					<icon res="checkbox_true"/>
					<condition var1="tw_mount_system_ro" op="!=" var2="0"/>
					<action function="set">tw_lifetime_writes=2</action>
					<action function="page">system_readonly_check</action>
				</listitem>
				<listitem name="{@mount_sys_ro_chk}">
					<condition var1="general_back" op="!=" var2="wipe"/>
					<condition var1="general_back" op="!=" var2="reboot"/>
					<condition var1="tw_mount_system_ro" var2="0"/>
					<icon res="checkbox_false"/>
					<action function="mountsystemtoggle">1</action>
				</listitem>
				<listitem name="{@use_rmrf_chk}">
					<condition var1="general_back" op="!=" var2="mount"/>
					<data variable="tw_rm_rf"/>
				</listitem>
				<listitem name="{@zip_sig_chk}">
					<data variable="tw_signed_zip_verify"/>
					<condition var1="general_back" var2="settings"/>
				</listitem>
				<listitem name="{@restoredialog_readonly}">
					<data variable="tw_never_show_system_ro_page"/>
					<condition var1="general_back" var2="settings"/>
				</listitem>
				<listitem name="{@fox_boot_fastcharge}">
					<condition var1="general_back" var2="settings"/>
					<data variable="fox_boot_fastcharge_check"/>
				</listitem>
				<listitem name="{@files_auto_open}">
					<data variable="fm_auto_open"/>
					<condition var1="general_back" var2="settings"/>
				</listitem>
				<listitem name="{@files_show_hidden}">
					<data variable="tw_hidden_files"/>
					<condition var1="general_back" var2="settings"/>
				</listitem>
				<listitem name="{@unmount_sys_install=Unmount System before installing a ZIP}">
					<condition var1="general_back" op="!=" var2="wipe"/>
					<condition var1="general_back" op="!=" var2="reboot"/>
					<data variable="tw_unmount_system"/>
				</listitem>
				<listitem name="{@unmount_vendor_install=Unmount Vendor before installing a ZIP}">
					<condition var1="general_back" op="!=" var2="wipe"/>
					<condition var1="general_back" op="!=" var2="reboot"/>
					<data variable="tw_unmount_vendor"/>
				</listitem>
				<listitem name="{@inject_twrp_chk}">
					<condition var1="tw_has_injecttwrp" var2="1"/>
					<condition var1="general_back" var2="settings"/>
					<data variable="tw_inject_after_zip"/>
				</listitem>
			</listbox>
			
			<text style="caption">
				<placement x="%col1_x_caption%" y="%row6_1a_y%"/>
				<condition var1="general_back" var2="settings"/>
				<text>{@perf_conf_mode}</text>
			</text>
			
			<text style="text_body1">
				<condition var1="general_back" var2="settings"/>
				<condition var1="fox_boot_performance_check" var2="1"/>
				<placement x="%col1_x_caption%" y="%row6_2a_y%"/>
				<text>{@perf_conf_high}</text>
			</text>
			
			<text style="text_body1">
				<condition var1="general_back" var2="settings"/>
				<condition var1="fox_boot_powersave_check" var2="1"/>
				<placement x="%col1_x_caption%" y="%row6_2a_y%"/>
				<text>{@perf_conf_batt}</text>
			</text>
			
			<text style="text_body1">
				<condition var1="general_back" var2="settings"/>
				<condition var1="fox_boot_balance_check" var2="1"/>
				<placement x="%col1_x_caption%" y="%row6_2a_y%"/>
				<text>{@perf_conf_balance}</text>
			</text>

			<button style="menu_btn">
				<condition var1="general_back" var2="settings"/>
				<placement x="%col1_x_caption%" y="%row6_1a_y%" w="%input_w%" h="%mb_h_hide%"/>
				<action function="page">ext_gov</action>
			</button>
			
			<action>
				<condition var1="tw_busy" var2="0"/>
				<condition var1="fox_boot_performance_check" op="!=" var2="1"/>
				<condition var1="fox_boot_balance_check" op="!=" var2="1"/>
				<condition var1="fox_boot_powersave_check" op="!=" var2="1"/>
				<action function="set">fox_boot_balance_check=1</action>
			</action>

			<template name="gestures"/>

			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">%general_back%</action>
			</action>
		</page>
		
		<page name="pass_select">
			<template name="body"/>

			<fill color="%title_solid_bg%">
				<condition var1="darker_ui" var2="1"/>
				<placement x="0" y="0" w="%screen_w%" h="%row4_1_y%"/>
			</fill>

			<template name="status_bg"/>
			
			<template name="actionbar_back"/>

			<template name="statusbarinfo"/>
			
			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>{@enter_password_cptn}</text>
			</text>

			<image>
				<image resource="fox_lock"/>
				<placement x="68" y="%row1_1_y%"/>
			</image>

			<text style="text_body1_hl">
				<placement x="450" y="%row1_1_y%"/>
				<text>{@pass_page_block}</text>
			</text>

			<text style="text_ab_title">
				<condition var1="fox_use_pass" op="!=" var2="1"/>
				<placement x="450" y="%row1_2_y%"/>
				<text>{@fm_none}</text>
			</text>

			<text style="text_ab_title">
				<condition var1="fox_pass_type" op="!=" var2="1"/>
				<condition var1="fox_pass_type" op="!=" var2="2"/>
				<condition var1="fox_use_pass" var2="1"/>
				<placement x="450" y="%row1_2_y%"/>
				<text>{@pass_classic}</text>
			</text>

			<text style="text_ab_title">
				<condition var1="fox_pass_type" var2="2"/>
				<condition var1="fox_use_pass" var2="1"/>
				<placement x="450" y="%row1_2_y%"/>
				<text>{@pass_pin}</text>
			</text>

			<text style="text_ab_title">
				<condition var1="fox_use_pass" var2="1"/>
				<condition var1="fox_pass_type" var2="1"/>
				<placement x="450" y="%row1_2_y%"/>
				<text>{@pass_gk}</text>
			</text>

			<text style="text_body1_hl">
				<placement x="450" y="%row2_3a_y%"/>
				<text>{@pass_page_block_inf1}</text>
			</text>

			<text style="text_body1_hl">
				<placement x="450" y="%row3_1a_y%"/>
				<text>{@pass_page_block_inf2}</text>
			</text>

			<image>
				<image resource="actionbar_shadow"/>
				<condition var1="show_shadow" var2="1"/>
				<placement x="0" y="%row4_1_y%"/>
			</image>
			
			<fill color="%linecolor%">
				<condition var1="show_shadow" var2="2"/>
				<placement x="0" y="%row4_1_y%" w="1080" h="2"/>
			</fill>

			<text style="caption">
				<placement x="%col1_x_caption%" y="%row4_2_y%"/>
				<text>ADB</text>
			</text>

			<listbox style="settingslist">
				<placement x="0" y="%row4_3_y%" w="%screen_w%" h="%lb_l1%"/>
				<listitem name="{@run_adb_startup}">
					<data variable="adb_startup"/>
				</listitem>
			</listbox>

			<text style="caption">
				<placement x="%col1_x_caption%" y="%row5_2a_y%"/>
				<text>{@pass_page_select}</text>
			</text>

			<listbox style="btn_list">
				<placement x="0" y="%row5_3a_y%" w="%screen_w%" h="%bl_h4%"/>
				<listitem name="{@pass_classic}">
					<icon res="pass_classic"/>
					<action function="set">pass_new_1=</action>
					<action function="set">pass_new_2=</action>
					<action function="set">pass_notm=0</action>
					<action function="page">pass_text</action>
				</listitem>
				<listitem name="{@pass_pin}">
					<icon res="dialpad"/>
					<action function="set">pass_new_1=</action>
					<action function="set">pass_new_2=</action>
					<action function="set">pass_notm=0</action>
					<action function="page">pass_pin</action>
				</listitem>
				<listitem name="{@pass_gk}">
					<icon res="pass_gesture"/>
					<action function="set">pass_new_1=</action>
					<action function="set">pass_new_2=</action>
					<action function="set">pass_notm=0</action>
					<action function="set">pass_pattern_grid=3</action>
					<action function="page">pass_pattern</action>
				</listitem>
				<listitem name="{@pass_dis}">
					<condition var1="fox_use_pass" var2="1"/>
					<icon res="bs_adv_frp"/>
					<action function="set">pass_new_1=qwerty</action>
					<action function="set">pass_new_2=</action>
					<action function="set">pass_notm=0</action>
					<action function="set">fox_pass_type=0</action>
					<action function="set">pass_pattern_grid=3</action>
					<action function="set">fox_use_pass=0</action>
					<action function="setpassword"/>
					<action function="overlay">pass_remove</action>
					<action function="set">of_reload_back=pass_select</action>
					<action function="reload"/>
				</listitem>
			</listbox>

			<template name="gestures"/>
			
			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">settings</action>
			</action>
		</page>

		<!-- Screen -->
		<page name="ext_screen">
			<template name="base"/>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>{@settings_screen}</text>
			</text>

			<text style="caption">
				<placement x="%col1_x_caption%" y="%row1_1_y%"/>
				<text>{@settings_screen_cptn}</text>
			</text>

			<text style="text_body1">
				<condition var1="tw_has_brightnesss_file" var2="1"/>
				<placement x="%col1_x_caption%" y="%row1_2_y%"/>
				<text>{@screen_bright_slider}</text>
			</text>

			<slidervalue>
				<condition var1="tw_has_brightnesss_file" var2="1"/>
				<placement x="%slider_x%" y="%row1_3_y%" w="%slidervalue_w%"/>
				<data variable="tw_brightness_pct" min="10" max="100" showrange="0" showcurr="0" changeondrag="1"/>
				<action function="set">tw_brightness=%tw_brightness_max%</action>
				<action function="compute">tw_brightness*%tw_brightness_pct%</action>
				<action function="compute">tw_brightness/100</action>
				<action function="setbrightness">%tw_brightness%</action>
			</slidervalue>

			<text style="text_body1">
				<condition var1="tw_screen_timeout_secs" var2="0"/>
				<condition var1="tw_no_screen_timeout" op="!=" var2="1"/>
				<placement x="%col1_x_caption%" y="%row2_3a_y%"/>
				<text>{@settings_screen_timeout_cptn}</text>
			</text>

			<text style="text_body1">
				<condition var1="tw_screen_timeout_secs" op="!=" var2="0"/>
				<condition var1="tw_no_screen_timeout" op="!=" var2="1"/>
				<placement x="%col1_x_caption%" y="%row2_3a_y%"/>
				<text>{@settings_screen_timeout_cptn2} %tw_screen_timeout_secs% {@timeout_unit}</text>
			</text>

			<slidervalue>
				<condition var1="tw_no_screen_timeout" op="!=" var2="1"/>
				<placement x="%slider_x%" y="%row3_1a_y%" w="%slidervalue_w%"/>
				<data variable="tw_screen_timeout_secs" min="0" max="300" showrange="0" showcurr="0" changeondrag="1"/>
			</slidervalue>

			<text style="caption">
				<condition var1="no_green_led" op="!=" var2="1"/>
				<placement x="%col1_x_caption%" y="%row4_2a_y%"/>
				<text>{@fox_led_title}</text>
			</text>

			<listbox style="settingslist">
				<condition var1="no_green_led" op="!=" var2="1"/>
				<placement x="0" y="%row4_3a_y%" w="%screen_w%" h="%lb_l1%"/>
				<listitem name="{@fox_use_green_led}">
					<data variable="fox_led_color"/>
				</listitem>
			</listbox>

			<template name="gestures"/>

			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">settings</action>
			</action>
		</page>

		<!-- Vibration -->
		<page name="ext_vibrate">
			<template name="base"/>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>{@vibration_hdr}</text>
			</text>

			<text style="caption">
				<placement x="%col1_x_caption%" y="%row1_1_y%"/>
				<text>{@vibration_hdr}</text>
			</text>

			<text style="text_body1">
				<placement x="%col1_x_caption%" y="%row1_2_y%"/>
				<condition var1="tw_button_vibrate" op="!=" var2="0"/>
				<text>{@button_vibration} %tw_button_vibrate%</text>
			</text>

			<text style="text_body1">
				<condition var1="tw_button_vibrate" var2="0"/>
				<placement x="%col1_x_caption%" y="%row1_2_y%"/>
				<text>{@button_vibration_hdr}</text>
			</text>

			<slidervalue>
				<placement x="%slider_x%" y="%row1_3_y%" w="%slidervalue_w%"/>
				<data variable="tw_button_vibrate" min="0" max="300" showrange="0" showcurr="0" changeondrag="1"/>
			</slidervalue>

			<text style="text_body1">
				<condition var1="tw_keyboard_vibrate" op="!=" var2="0"/>
				<placement x="%col1_x_caption%" y="%row2_3a_y%"/>
				<text>{@kb_vibration} %tw_keyboard_vibrate%</text>
			</text>

			<text style="text_body1">
				<condition var1="tw_keyboard_vibrate" var2="0"/>
				<placement x="%col1_x_caption%" y="%row2_3a_y%"/>
				<text>{@kb_vibration_hdr}</text>
			</text>

			<slidervalue>
				<placement x="%slider_x%" y="%row3_1a_y%" w="%slidervalue_w%"/>
				<data variable="tw_keyboard_vibrate" min="0" max="300" showrange="0" showcurr="0" changeondrag="1"/>
			</slidervalue>

			<text style="text_body1">
				<condition var1="tw_action_vibrate" op="!=" var2="0"/>
				<placement x="%col1_x_caption%" y="%row4_2_y%"/>
				<text>{@act_vibration} %tw_action_vibrate%</text>
			</text>

			<text style="text_body1">
				<condition var1="tw_action_vibrate" var2="0"/>
				<placement x="%col1_x_caption%" y="%row4_2_y%"/>
				<text>{@act_vibration_hdr}</text>
			</text>

			<slidervalue>
				<placement x="%slider_x%" y="%row4_3_y%" w="%slidervalue_w%"/>
				<data variable="tw_action_vibrate" min="0" max="500" showrange="0" showcurr="0" changeondrag="1"/>
			</slidervalue>

			<template name="gestures"/>

			<action>
				<touch key="home"/>
				<action function="page">main</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">settings</action>
			</action>
		</page>

		<!-- Backup -->
		<page name="ext_backup">
			<template name="base"/>

			<text style="text_ab_title">
				<placement x="%col1_x_indent%" y="%ab_bc_y%"/>
				<text>{@backup_hdr}</text>
			</text>

			<text style="caption">
				<placement x="%col1_x_caption%" y="%row1_1_y%"/>
				<text>{@settings_backup_qbkp_custom}</text>
			</text>

			<text style="text_body1">
				<placement x="%col1_x_caption%" y="%row1_2_y%"/>
